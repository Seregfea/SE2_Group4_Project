<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.SE2_Group4_Project"
        tools:targetApi="31">
        <activity
            android:name=".ClientActivity"
            android:exported="false"
            android:label="@string/title_activity_client"
            android:theme="@style/Theme.SE2_Group4_Project" />
        <activity
            android:name=".ServerActivity"
            android:exported="true" />
        <activity
            android:name=".Gameboard"
            android:exported="true"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".screens.PlayGameActivity"
            android:exported="false" />
        <activity
            android:name=".screens.OptionsActivity"
            android:exported="false" />
        <activity
            android:name=".screens.SelectRoomActivity"
            android:exported="false" />
        <activity
            android:name=".screens.FindGameActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlipCardsTest"
            android:exported="true"
            android:screenOrientation="sensorLandscape"/>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
