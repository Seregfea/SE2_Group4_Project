<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dice_background"
    android:backgroundDimEnabled="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

        <LinearLayout
            android:id="@+id/diceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

        <EditText
            android:id="@+id/et_changeDiceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="new dice value"
            android:hint="@string/change_dice_value"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textSize="14sp"
            android:inputType="number"
            android:textAlignment="center"
            android:enabled="false">
        </EditText>

        <Button
            android:id="@+id/btnSubmitClickedDices"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:text="@string/submit_clicked_btns"
            android:textSize="12sp">
        </Button>

</LinearLayout>
