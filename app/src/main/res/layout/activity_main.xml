    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_options"
        android:layout_width="287dp"
        android:layout_height="78dp"
        android:layout_marginTop="224dp"
        android:text="Einstellungen"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_find_game"
        android:layout_width="287dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:text="Spiel Suchen"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_options" />

    <Button
        android:id="@+id/button_select_room"
        android:layout_width="287dp"
        android:layout_height="78dp"
        android:text="Raum auswÃ¤hlen"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_find_game"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="282dp"
        android:layout_height="63dp"
        android:layout_marginTop="88dp"
        android:text="Spielen!"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />
</androidx.constraintlayout.widget.ConstraintLayout>